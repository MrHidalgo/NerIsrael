mixin listItem(title, arr, classMod, wrapperHide)
  .list__row(class!= classMod)
    p.list__row-title(list-title-js)
      span!= title
      i
    .list__row-wrapper(class!= (wrapperHide) ? "list__row-wrapper--hide": "")
      each val, idx in arr
        .list__row-block
          .list__row-block--left
            .list__row-img
              img(
                src="./img/img-ava-0__featured.png"
                srcset="./img/img-ava-0__featured@2x.png 2x"
                alt=""
                title=""
               )
          .list__row-block--right
            p.list__row-name(title!= arr[idx].name)!= arr[idx].name
            p.list__row-position(title!= arr[idx].position)!= arr[idx].position


.list.list--wbg
