include ../utilities/_mixin

doctype html
html(lang="en")

  head
    include _head

  body(
    data-file!= dataPageName
  )
    if(bodyClassName !== "player")
      block header
        include ../components/_header

    #barba-wrapper
      .barba-container
        block content

    if(bodyClassName !== "player")
      block footer
        include ../components/_footer

  block script
    include _script